generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// === User Model
model User {
  id         Int      @id @default(autoincrement())
  name       String?
  email      String   @unique
  password   String?
  role       Role     @default(student)
  googleId   String?  @unique
  created_at DateTime @default(now())
  phone      String?
  avatar     String?
  bio        String?

  quiz_results  QuizResult[]
  user_xp       UserXp?

  @@map("users")
}

enum Role {
  student
  teacher
  admin
}

// === User XP
model UserXp {
  user_id Int   @id
  xp      Int   @default(0)

  user    User  @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("user_xps")
}

// === Subject Model
model Subject {
  id            Int      @id @default(autoincrement())
  name          String
  desc          String   @db.Text
  slug          String   @unique
  thumbnail_url String
  created_at    DateTime @default(now())

  topics Topic[]

  @@map("subjects")
}

// === Topic Model
model Topic {
  id              Int @id @default(autoincrement())
  subject_id      Int
  title           String
  slug            String @unique
  desc            String @db.Text
  model_url       String
  marker_img_url  String
  scale_model     String
  finished        Boolean @default(false)
  content         String? @db.Text 
  created_at      DateTime @default(now())

  subject         Subject @relation(references: [id], fields: [subject_id], onDelete: Cascade)
  quizzes         Quiz[]
  quiz_results    QuizResult[]

  @@map("topics")
}

// === Quiz Model
model Quiz {
  id              Int      @id @default(autoincrement()) // untuk query
  uuid            String   @default(uuid()) @unique      // untuk display
  topic_id        Int
  question        String   @db.Text
  options         Json
  correct_answer  String
  explain         String?
  created_at      DateTime @default(now())

  topic           Topic @relation(references: [id], fields: [topic_id], onDelete: Cascade)

  @@map("quizzes")
}

// === Quiz Result Model
model QuizResult {
  id Int @id @default(autoincrement())
  uuid String @unique
  topic_id Int
  user_id Int
  xp Int
  created_at DateTime @default(now())

  topic Topic @relation(references: [id], fields: [topic_id], onDelete: Cascade)
  user User @relation(references: [id], fields: [user_id], onDelete: Cascade)
  quiz_answers QuizAnswer[]

  @@map("quiz_results")
}

// === Quiz Answer Model
model QuizAnswer {
  id          Int @id @default(autoincrement())
  result_id   Int
  answer      String
  is_correct  Boolean

  quiz_result QuizResult @relation(references: [id], fields: [result_id], onDelete: Cascade)

  @@map("quiz_answers")
}