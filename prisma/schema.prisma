generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// === User Model
model User {
  id         Int      @id @default(autoincrement())
  name       String?
  email      String   @unique
  password   String?
  role       Role     @default(student)
  googleId   String?  @unique
  
  created_at DateTime @default(now())

  @@map("users")
}

enum Role {
  student
  teacher
  admin
}

// === Subject Model
model Subject {
  id            Int      @id @default(autoincrement())
  name          String
  desc          String   @db.Text
  slug          String   @unique
  thumbnail_url String
  created_at    DateTime @default(now())

  topics Topic[]

  @@map("subjects")
}

// === Topic Model
model Topic {
  id              Int @id @default(autoincrement())
  subject_id      Int
  title           String
  slug            String @unique
  desc            String @db.Text
  model_url       String
  marker_img_url  String
  audio_url       String
  created_at      DateTime @default(now())

  subject         Subject @relation(references: [id], fields: [subject_id])
  quizzes         Quiz[]

  @@map("topics")
}

// === Quiz Model
model Quiz {
  id              Int      @id @default(autoincrement()) // untuk query
  uuid            String   @default(uuid()) @unique      // untuk display
  topic_id        Int
  question        String   @db.Text
  options         Json
  correct_answer  String
  created_at      DateTime @default(now())

  topic           Topic @relation(references: [id], fields: [topic_id])

  @@map("quizzes")
}